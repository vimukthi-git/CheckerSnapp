  "main": "build/src/demo.js",
  "types": "build/src/demo.d.ts",
  "type": "module",
  "scripts": {
    "test": "jest",
    "testw": "jest --watch",
    "coverage": "jest --coverage",
    "start": "node src/server.js & esbuild --watch --splitting --bundle ./src/App.jsx --outdir=./public/js --format=esm --target=esnext --define:process.env.NODE_ENV='\"development\"'",
    "build": "tsc && esbuild --minify --splitting --bundle ./src/App.jsx --outdir=./public/js --format=esm --target=esnext --define:process.env.NODE_ENV='\"production\"'",
    "prepare": "husky install",
    "format": "prettier --write --ignore-unknown **/*"
  },
  "dependencies": {
    "esbuild": "^0.14.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "snarkyjs": "^0.2.0",
    "typescript": "^4.5.2"
  },
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "lint-staged": "^11.0.1",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.4"
  },
  "lint-staged": {
    "**/*": [
      "prettier --write --ignore-unknown"
    ]
  }
